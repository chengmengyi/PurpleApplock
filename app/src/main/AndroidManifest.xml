<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.purpleapplock.security">
    <uses-permission android:name="android.permission.REAL_GET_TASKS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions"/>

    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name="com.purpleapplock.security.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PurpleApplock">
        <activity
            android:name="com.purpleapplock.security.page.MainPage"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.purpleapplock.security.page.HomePage"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity android:name="com.purpleapplock.security.page.lock.SetPwdPage"
            android:screenOrientation="portrait"/>
        <activity android:name="com.purpleapplock.security.page.lock.AppListPage"
            android:screenOrientation="portrait"/>
        <activity android:name="com.purpleapplock.security.page.SetPage"
            android:screenOrientation="portrait"/>
        <activity android:name="com.purpleapplock.security.page.WebPage"
            android:screenOrientation="portrait"/>

        <service android:name="com.purpleapplock.security.servers.AppLockServer"
            android:exported="true"/>

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
    </application>

</manifest>