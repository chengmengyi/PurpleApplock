<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="328dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/view_native"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_fff_8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/view_logo"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:round="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#192340"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="@id/view_logo"
                app:layout_constraintLeft_toRightOf="@id/view_logo"
                app:layout_constraintRight_toLeftOf="@id/tag"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AD"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_ad_tag2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/view_title"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#192340"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/view_title"
                app:layout_constraintLeft_toRightOf="@id/view_logo"
                app:layout_constraintRight_toRightOf="parent"
                />
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/view_media"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/view_logo"
                app:layout_constraintBottom_toTopOf="@id/view_btn"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="14sp"
                android:text="Install"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_9570d7_16dp"
                app:layout_constraintRight_toRightOf="@id/view_title"
                app:layout_constraintLeft_toLeftOf="@id/view_title"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/cover3"/>
</RelativeLayout>