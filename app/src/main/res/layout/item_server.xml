<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/server_item_selector">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_server_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/fast"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_server_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:text="Super Fast Servers"
        android:textColor="@drawable/server_item_color_selector" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_choose"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/server_choose_selector"/>
</androidx.appcompat.widget.LinearLayoutCompat>